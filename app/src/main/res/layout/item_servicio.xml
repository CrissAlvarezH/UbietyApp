<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:id="@+id/cont_item_servicio"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:paddingTop="8dp"
        android:gravity="center_vertical"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/item_img_logo_servicio"
            android:src="@drawable/ic_aire_acondicionado"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

    <LinearLayout
            android:paddingLeft="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/item_txt_nombre_servicio"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:text="Nombre del servicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/item_txt_descripcion_servicio"
                android:text="Descripcion del servicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>