<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:background="#EEEDED"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".fragments.PerfilArrendatarioFragment">

    <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="60dp"
                android:layout_width="120dp"
                android:layout_height="120dp">

            <ImageView
                    android:id="@+id/img_arrendatario"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>



        </androidx.cardview.widget.CardView>

        <TextView
                android:id="@+id/txt_nombre_arrendatario"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="19sp"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        <LinearLayout
                android:orientation="vertical"
                android:elevation="2dp"
                android:layout_marginTop="20dp"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:background="#FCF0D8F5"
                    android:gravity="center"
                    android:textColor="#500D5C"
                    android:textSize="19sp"
                    android:text="Pensiones favoritas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:gravity="center_horizontal"
                    android:padding="20dp"
                    android:text="No ha agregado pensiones a su lista de favoritos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <com.facebook.login.widget.LoginButton
                android:id="@+id/login_button_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp" />
    </LinearLayout>


</FrameLayout>